-- If not yet created:
-- ALTER TABLE Users ADD COLUMN TeamId INTEGER REFERENCES Teams(ID);

-- Update each user with their team's ID
UPDATE Users
SET TeamId = (SELECT ID FROM Teams WHERE Name = 'Sales Sharks')
WHERE ID IN (33, 34, 35);

UPDATE Users
SET TeamId = (SELECT ID FROM Teams WHERE Name = 'Marketing Maniacs')
WHERE ID IN (36, 37, 38);

UPDATE Users
SET TeamId = (SELECT ID FROM Teams WHERE Name = 'Money Mavens')
WHERE ID IN (39, 40);

UPDATE Users
SET TeamId = (SELECT ID FROM Teams WHERE Name = 'HR Heroes')
WHERE ID IN (41, 42);

UPDATE Users
SET TeamId = (SELECT ID FROM Teams WHERE Name = 'Support Squad')
WHERE ID IN (43, 44, 45);

UPDATE Users
SET TeamId = (SELECT ID FROM Teams WHERE Name = 'Project Pioneers')
WHERE ID IN (46, 47);
