    PRIMARY KEY (ApplicationId, ProjectId), -- Prevents duplicate associations
    FOREIGN KEY (ApplicationId) REFERENCES Applications(ID) ON DELETE CASCADE,
    FOREIGN KEY (ProjectId) REFERENCES Projects(ID) ON DELETE CASCADE
);

